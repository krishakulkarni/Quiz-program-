    printf("2.elliptically polarized\n");
    printf("3.circularly polarized\n");
    printf("4.non polarized\n");
    printf("Your Answer: ");
    scanf("%d", &Answer);
    if (Answer == 2) {
        score++;
        printf("1 \n"); // Correct answer
    } else {
        printf("0 \n"); // Incorrect answer
    }
     printf("Correct answer is : 2");

